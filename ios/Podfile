# Uncomment this line to define a global platform for your project
# platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
  
  # Fix framework header includes - replace double-quoted with angle-bracketed
  # This is required when using use_frameworks!
  frameworks_config = {
    'TOCropViewController' => ['TO', 'UIImage+CropRotate'],
    'SDWebImage' => ['SD', 'NSData+ImageContentType', 'NSImage+Compatibility', 'NSButton+WebCache', 'UIImage+', 'UIView+', 'UIButton+WebCache']
  }
  
  frameworks_config.each do |framework_name, prefixes|
    # Fix umbrella header
    umbrella_header_path = File.join(installer.sandbox.root, 'Target Support Files', framework_name, "#{framework_name}-umbrella.h")
    if File.exist?(umbrella_header_path)
      content = File.read(umbrella_header_path)
      content.gsub!(/#import "([^"]+)"/) do |match|
        header_name = $1
        "#import <#{framework_name}/#{header_name}>"
      end
      File.write(umbrella_header_path, content)
    end
    
    # Fix all header files in the framework directory
    framework_dir = File.join(installer.sandbox.root, framework_name)
    if Dir.exist?(framework_dir)
      Dir.glob("#{framework_dir}/**/*.h").each do |header_path|
        content = File.read(header_path)
        original_content = content.dup
        
        # Replace double-quoted includes that match framework header patterns
        content.gsub!(/#import "([^"]+)"/) do |match|
          header_name = $1
          header_file = header_name.split('/').last
          
          # Check if this header belongs to the framework
          should_fix = prefixes.any? { |prefix| header_file.start_with?(prefix) }
          
          if should_fix
            "#import <#{framework_name}/#{header_name}>"
          else
            match # Keep original if not from same framework
          end
        end
        
        File.write(header_path, content) if content != original_content
      end
    end
  end
end
